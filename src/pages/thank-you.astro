---
import { Icon } from 'astro-icon';

import Layout from '@layouts/Layout.astro';
import Section from '@components/utils/Section.astro';
import Social from '@components/Social.astro';
---

<script>
  const queryParams = new URLSearchParams(window.location.search);
  const nameElem = document.querySelector('#name') as HTMLSpanElement;
  const name = queryParams.get('name');

  if (name) {
    nameElem.innerText = ` ${name}.`;
  } else if (import.meta.env.PROD) {
    window.location.replace('/');
  }
</script>

<Layout title="Abdul Samad Ansari - Developer - Thank You" noindex={true}>
  <Section class="flex min-h-[calc(100vh-76px)] w-full flex-col items-center justify-between">
    <div aria-hidden="true" class="invisible"></div>
    <div class="flex flex-col items-center justify-center gap-6">
      <h1 class="flex gap-1 text-center text-2xl">
        <Icon name="ic:baseline-check-circle" class="h-8 w-8 fill-white text-green-500" />
        <span>
          Thank you for submitting your query,<strong
            id="name"
            class="relative whitespace-nowrap font-display font-semibold before:absolute before:-bottom-1 before:left-0 before:right-0 before:block before:h-[4px] before:w-full before:rounded-lg before:bg-primary after:absolute after:-bottom-3 after:right-0 after:block after:h-[4px] after:w-[120%] after:rounded-lg after:bg-primary after:content-['']"
          ></strong>
        </span>
      </h1>
      <h2 class="text-center text-xl">
        I appreciate your message and will respond to you as promptly as possible ðŸ˜ƒ
      </h2>
    </div>
    <div class="mt-16 flex flex-col items-center gap-y-4">
      <h3 class="text-lg">More ways to connect with me</h3>
      <Social />
    </div>
  </Section>
</Layout>
