---
import { socialLinks } from '@utils/index';
---

<div class="relative h-[250px] md:h-[auto]">
  <div class="flex flex-col items-center justify-center h-full">
    <div
      class="h-80 w-80 bg-primary-500 lg:bg-primary rounded-full absolute lg:-top-1/3 lg:-right-32 top-28 -right-28"
      aria-hidden="true">
    </div>
    <div class="z-10 flex justify-center items-center flex-col">
      <h2 class="mb-4 text-3xl heading">Get in Touch!</h2>
      <div class="flex items-center justify-start gap-x-6">
        {
          socialLinks.map(({ iconName, url, name }) => (
            <a
              class={`no-underline rounded ${name === 'LinkedIn' && 'bg-white'}`}
              href={url}
              rel="noopener"
              target="_blank">
              <img src={`icons/${iconName}.svg`} alt="GitHub" height={20} width={20} />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
