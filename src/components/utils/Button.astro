---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'button'> {
  variant?: 'filled' | 'outline';
}

const { class: className, variant = 'filled', ...buttonProps } = Astro.props;
---

<button
  class={`px-5 py-2 shadow rounded-3xl text-white ${
    variant === 'filled'
      ? 'bg-gradient-to-r from-primary via-purple-500 to-pink-500'
      : 'bg-transparent border-white border-2 border-solid'
  } ${className}`}
  {...buttonProps}>
  <slot />
</button>
