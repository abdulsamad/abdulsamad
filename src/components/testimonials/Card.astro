---
export interface Props {
  author: string;
  comment: string;
  designation: string;
  company: string;
  country: string;
}

const { author, comment, company, designation, country } = Astro.props;
---

<div class="flex flex-col p-5 bg-white text-slate-700 rounded-r-2xl border-l-[6px] border-primary">
  <blockquote
    class="flex-1 before:content-[open-quote] before:text-5xl before:text-gray-300 after:content-[close-quote] after:text-5xl after:text-gray-300 after:absolute after:translate-x-2 after:translate-y-3">
    {comment}
  </blockquote>
  <div class="text-right mt-2">
    <cite
      class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 font-semibold">
      {author}
    </cite>
    <div
      class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-yellow-600 font-semibold">
      {designation}{designation && ', '}{company}
    </div>
  </div>
</div>
