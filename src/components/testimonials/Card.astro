---
export interface Props {
  author: string;
  comment: string;
  designation: string;
  company: string;
  country: string;
}

const { author, comment, company, designation, country } = Astro.props;
---

<div
  class="testimonial-card flex flex-col relative p-5 backdrop-blur-md transition-transform rounded-r-2xl border-l-[6px] border-primary before:font-serif before:absolute before:text-[22rem] before:overflow-hidden before:text-gray-300 before:block before:h-full before:w-full before:content-[open-quote] before:opacity-10 before:inset-0 before:left-0 before:transition-transform">
  <blockquote
    class="flex-1 text-slate-200 before:content-[open-quote] before:text-5xl before:text-gray-300 after:content-[close-quote] after:text-5xl after:text-gray-300 after:absolute after:translate-x-2 after:translate-y-3">
    {comment}
  </blockquote>
  <div class="text-right mt-2">
    <cite
      class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 font-semibold">
      {author}
    </cite>
    <div
      class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-yellow-600 font-semibold">
      {designation}{designation && ', '}{company}
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    box-shadow: inset 28.23px 28.23px 24px #080c15, inset -28.23px -28.23px 24px #17243f;
  }
</style>
