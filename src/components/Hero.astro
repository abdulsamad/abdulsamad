---
import Section from '@components/utils/Section.astro';
import Link from '@components/utils/Link.astro';
---

<Section class="min-h-screen flex items-center justify-start">
  <div class="flex flex-col">
    <h1
      class="text-xl font-display lg:text-4xl leading-8 lg:leading-12 text-gray-800">
      Hi, I'm Abdul Samad, <br /> Web Developer who loves <br />
      <div
        class="text-3xl my-2 lg:text-5xl bg-gradient font-bold bg-clip-text text-transparent h-14 [background-size:400%] animate-text-gradient">
        Crafting Awesome Web Experiences
      </div>
    </h1>
    <div class="flex gap-5 mt-3">
      <Link variant="filled" href="#contact">Get In Touch</Link>
      <Link variant="outline" href="#projects">View Projects</Link>
    </div>
  </div>
</Section>
