---
import Section from '@components/utils/Section.astro';
import Link from '@components/utils/Link.astro';
---

<Section class="flex min-h-[calc(100vh-72px)] items-center justify-start">
  <div class="flex min-h-[350px] flex-col">
    <h1 class="font-display text-xl leading-8 lg:text-4xl lg:leading-12">
      Hi, I'm <span
        class="relative after:absolute after:-bottom-1 after:right-0 after:inline-block after:h-[4px] after:w-[6ch] after:bg-gradient after:delay-500 after:duration-300 after:content-['']"
        >Abdul Samad,</span
      ><br />Web Developer who loves <br />
      <div
        class="my-2 animate-text-gradient bg-gradient bg-clip-text text-3xl font-bold text-transparent [background-size:400%] lg:h-14 lg:text-5xl">
        Crafting Awesome Web Experiences
      </div>
    </h1>
    <div class="mt-3 flex gap-5">
      <Link variant="filled" href="#contact" className="whitespace-nowrap">Get In Touch</Link>
      <Link variant="outline" href="#projects" className="whitespace-nowrap">View Projects</Link>
    </div>
  </div>
  <button
    id="hero-mouse-button"
    class="absolute bottom-10 left-1/2 flex h-12 w-7 -translate-x-1/2 items-start justify-center rounded-full border-2 border-white p-2">
    <div class="h-[10px] w-1 animate-mouse-scroller rounded-[25%] bg-white"></div>
    <div class="sr-only">Scroll below</div>
  </button>
</Section>

<script>
  /* Scroll */
  const button = document.querySelector('#hero-mouse-button') as HTMLButtonElement;
  const SCROLL_LENGTH = 500;

  // Scroll page up by 500px
  button.addEventListener('click', () => {
    window.scrollBy(0, SCROLL_LENGTH);
  });

  /* Document Title */
  const title = document.title;
  const messages = ["Don't you love me anymore? 😭", "I'm feeling lonely 😭", '(1) ❤️ Miss You!'];

  window.addEventListener('blur', () => {
    const randomMessage = messages[Math.floor(Math.random() * messages.length)];
    document.title = randomMessage;
  });

  window.addEventListener('focus', () => {
    document.title = title;
  });
</script>
